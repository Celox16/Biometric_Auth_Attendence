<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_info_modify_refactor"
    android:orientation="vertical"
    tools:context=".UserInfoModify">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_userInfoModify_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userName"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="님, 안녕하세요!"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_userInfoModify_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="major"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=", "/>

            <TextView
                android:id="@+id/tv_userInfoModify_stuNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stuNum"
                android:textColor="@color/black" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_aspect_ratio_24"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="145dp"
            android:id="@+id/et_userInfoModify_major"
            android:hint="set major"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_aspect_ratio_24"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="14dp"
            android:id="@+id/et_userInfoModify_studentNumber"
            android:hint="set studentNumber"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_aspect_ratio_24"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="14dp"
            android:id="@+id/et_userInfoModify_semester"
            android:hint="set semester"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_aspect_ratio_24"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="14dp"
            android:id="@+id/et_userInfoModify_address"
            android:hint="set address"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_aspect_ratio_24"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="14dp"
            android:id="@+id/et_userInfoModify_status"
            android:hint="set status"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_aspect_ratio_24"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="14dp"
            android:id="@+id/et_userInfoModify_birth"
            android:hint="set birth"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_userInfoModify_save"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:background="#00ff0000"
        android:layout_height="50dp"/>

</LinearLayout>